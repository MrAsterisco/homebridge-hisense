  "main": "dist/index.js",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/MrAsterisco/homebridge-hisense-tv",
  "keywords": [
    "homebridge",
    "homebridge-plugin",
    "hisense",
    "hisense-tv"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrAsterisco/homebridge-hisense-tv.git"
  },
  "bugs": {
